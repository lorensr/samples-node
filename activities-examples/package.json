{
  "name": "temporal-activities",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "test": "ts-mocha ./test/*.test.ts",
    "test.watch": "ts-mocha ./test/*.test.ts -w --watch-files src, test/**/*.ts",
    "workflow": "ts-node src/execute-workflow.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "axios": "0.21.1",
    "node-fetch": "2.x",
    "temporalio": "0.4.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.0",
    "@types/mocha": "8.x",
    "@types/node-fetch": "^2.5.12",
    "mocha": "8.x",
    "nodemon": "^2.0.12",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.2"
  }
}
